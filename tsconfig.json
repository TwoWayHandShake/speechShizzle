{
	"compilerOptions": {
		"outDir": "build/dist",
		"module": "esnext",
		"target": "es5",
		"lib": ["es2017", "dom"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "preserve",
		"moduleResolution": "node",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"experimentalDecorators": true,
		"skipLibCheck": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true
	},
	"exclude": [
		"node_modules",
		"electron-build",
		"build",
		"config-overrides.js",
		"lint-staged.config.js",
		"config"
	],
	"include": ["src"]
}
